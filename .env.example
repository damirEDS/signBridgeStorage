# Application Settings
APP_NAME=signBridgeStorage
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# S3 Storage Configuration (Yandex Cloud Object Storage)
S3_STORAGE_ACCESS_ID=your_access_key_id
S3_STORAGE_ACCESS_KEY=your_secret_access_key
S3_ENDPOINT_URL=https://storage.yandexcloud.kz
S3_BUCKET_NAME=your-bucket-name
S3_REGION=kz1

# File Upload Settings
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip

# Presigned URL Settings
PRESIGNED_URL_EXPIRATION_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
